<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDING"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="#FFA500"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Commission description..."
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 VND"
                    android:textColor="#4CAF50"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline: Dec 31, 2025"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:drawableStart="@android:drawable/ic_menu_my_calendar"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created: Dec 01, 2025"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvAcceptedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accepted: Dec 02, 2025"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvCompletedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed: Dec 15, 2025"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tvWorkLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work Link: https://..."
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnOpenWorkLink"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Open Work Link"
                    android:textColor="#2196F3"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnAccept"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Accept"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnReject"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Reject"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#F44336"
                        android:layout_marginStart="8dp"/>

                    <Button
                        android:id="@+id/btnStart"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Start Work"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2196F3"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnComplete"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Complete"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#9C27B0"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnCancel"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Cancel"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF9800"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>