<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Artist Avatar -->
        <ImageView
            android:id="@+id/artistAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/defaultavatar"
            android:scaleType="centerCrop"
            android:background="#E0E0E0" />

        <!-- Artist Info Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Artist Name -->
            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Artist Email -->
            <TextView
                android:id="@+id/artistEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="artist@example.com"
                android:textColor="#666666"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Artist About -->
            <TextView
                android:id="@+id/artistAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="About the artist..."
                android:textColor="#424242"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Artist Skills -->
            <TextView
                android:id="@+id/artistSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Skills: ..."
                android:textColor="#757575"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Artist Software -->
            <TextView
                android:id="@+id/artistSoftware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Software: ..."
                android:textColor="#757575"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/viewProfileButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Profile"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2196F3"
                    android:padding="4dp" />

                <Button
                    android:id="@+id/requestCommissionButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Commission"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:padding="4dp" />

                <Button
                    android:id="@+id/messageButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Message"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>